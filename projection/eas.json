{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "node": "20.18.0",
      "pnpm": "8.15.0"
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "withoutCredentials": false
      },
      "channel": "preview",
      "env": {
        "EXPO_PUBLIC_API_URL": "https://nestly-api.up.railway.app"
      }
    },
    "production": {
      "extends": "base",
      "channel": "production",
      "env": {
        "EXPO_PUBLIC_API_URL": "https://nestly-api.up.railway.app"
      }
    }
  }
}
